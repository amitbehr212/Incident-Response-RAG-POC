# Example environment variables for incident response RAG pipeline
# Copy this file to .env and fill in your values

# GCP Project Configuration
PROJECT_ID=your-gcp-project-id
LOCATION=us-central1

# Google Drive Configuration
DRIVE_FOLDER_ID=your-google-drive-folder-id
IMPERSONATION_USER=user@yourdomain.com

# Pipeline Configuration
CHUNK_SIZE=1500
CHUNK_OVERLAP=200

# BigQuery Configuration
DESTINATION_DATASET=incident_response_rag
DESTINATION_TABLE=incident_response_embeddings

# Discovery Engine Configuration
DATA_STORE_REGION=global
DATA_STORE_ID=incident-response-datastore

# Service Account
SERVICE_ACCOUNT=pipeline-sa@your-project-id.iam.gserviceaccount.com

# Credentials
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json
